<UserControl x:Class="Preview.ToolsBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Preview"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="800">
    <Grid>
        <WrapPanel>
        <ComboBox x:Name="TimeLineScale" SelectedItem="6" SelectionChanged="TimeLineScale_SelectionChanged" Width="60" Margin="3" >
            <ComboBoxItem Content="0.01"/>
            <ComboBoxItem Content="0.03"/>
            <ComboBoxItem Content="0.05"/>
            <ComboBoxItem Content="0.1"/>
            <ComboBoxItem Content="0.2"/>
            <ComboBoxItem Content="0.4"/>
            <ComboBoxItem Content="1.0"/>
            <ComboBoxItem Content="2.0"/>
            <ComboBoxItem Content="3.0"/>
        </ComboBox>
            <TextBox md:HintAssist.Hint="Text"  MinWidth="160"/>
            <Button   Content="add text" Width="100"/>

        </WrapPanel>
    </Grid>
</UserControl>
